%h1 Listing items

%table
  %thead
    %tr
      %th おすすめ
      %th Name
      %th Description
      %th Price
      %th Image url

  %tbody
    - @items.each do |item|
      %tr
        %td= item.recommended ? '🌟' : ''
        %td= link_to item.name, item
        %td= item.description
        %td= "#{item.price} yen"
        %td= image_url item.image_url, size: '20x20'
        %td= link_to 'Show', item

= link_to "おすすめ商品", recommended_items_path
= link_to "商品一覧", items_path
